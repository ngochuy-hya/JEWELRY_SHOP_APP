<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_round_image" />

        <!-- Rating + lượt đánh giá -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6"
                android:textSize="13sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_star"
                android:drawablePadding="4dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(34)"
                android:textSize="12sp"
                android:layout_marginStart="6dp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Badge khuyến mãi -->
        <TextView
            android:id="@+id/textBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Deal"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="#1E8E3E"
            android:background="@drawable/bg_badge_green"
            android:layout_marginTop="6dp" />

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="4dp" />


        <!-- Giá khuyến mãi và giá gốc -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/textCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textOriginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹232"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Nút Add to Cart -->
        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Options"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:backgroundTint="#D6A04B"
            android:textSize="13sp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_button_cart" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
