<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_item_card"
    android:padding="8dp">

    <!-- Hình sản phẩm + trái tim -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:background="@drawable/bg_round_image" />

        <ImageView
            android:id="@+id/btnFavorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:src="@drawable/ic_heart_outline"
            android:background="@drawable/bg_circle_white"
            android:padding="4dp" />
    </FrameLayout>

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exquisite Handcrafted Rose Gold Limited Edition Elegant Fancy Fashionable Bag with Long Title"
        android:textSize="14sp"
        android:textColor="#000"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="6dp" />

    <!-- Giá hiện tại -->
    <TextView
        android:id="@+id/txtProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="₹463"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- Giá gạch -->
    <TextView
        android:id="@+id/txtProductOldPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:visibility="invisible" />
</LinearLayout>
