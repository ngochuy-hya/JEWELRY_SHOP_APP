<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#FFF8F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Coupon Icon -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_coupon"
            android:background="@drawable/bg_circle_gold"
            android:padding="8dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Coupon Icon" />

        <!-- Voucher Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Voucher Code -->
            <TextView
                android:id="@+id/tvVoucherCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XMAS50"
                android:textStyle="bold"
                android:textColor="#B47D2D"
                android:textSize="16sp" />

            <!-- Discount and Condition -->
            <TextView
                android:id="@+id/tvVoucherCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm 10% tối đa 100.000đ cho đơn từ 500.000đ"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Expiry -->
            <TextView
                android:id="@+id/tvVoucherExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HSD: 31/12/2025"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
