<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imgEmptyOrder"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_empty_order"
        android:contentDescription="Empty Order" />

    <TextView
        android:id="@+id/tvEmptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You haven't placed any order yet!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvEmptySubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order section is empty. After placing order, you can track them from here!"
        android:textSize="14sp"
        android:textColor="#888"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <Button
        android:id="@+id/btnContinueShopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Shopping"
        android:textColor="#fff"
        android:layout_marginTop="24dp"
        android:backgroundTint="#E08D12"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp" />
</LinearLayout>
