<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <!-- Header with Back, Title, Chat, Cart -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_left"
                android:background="@drawable/bg_circle_white"
                android:contentDescription="Back"
                android:scaleType="centerInside" />
        </FrameLayout>

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Product Detail"
            android:textStyle="bold"
            android:textSize="18sp" />


        <FrameLayout
            android:id="@+id/cartBadgeContainer"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageButton
                android:id="@+id/btnCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cart"
                android:background="@drawable/bg_circle_white"
                android:contentDescription="Cart"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tvCartCount"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/bg_badge_red"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <!-- Scroll content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image Carousel with dot indicator -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/imageIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:background="@android:color/transparent"
                        app:tabIndicatorColor="@android:color/transparent"
                        app:tabIndicatorHeight="0dp"
                        app:tabGravity="center"
                        app:tabMode="fixed"
                        app:tabRippleColor="@android:color/transparent" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/txtSku"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SKU: ATS - Jewellery set"
                        android:textColor="#888888"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/btnWishlist"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_heart_outline"
                        android:contentDescription="Add to Wishlist" />
                </LinearLayout>




                <!-- Product Title -->
                <TextView
                    android:id="@+id/txtProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rose Gold Polish with Stunning AD Stone Studded Choker Necklace set with Matching pair of Earrings"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <!-- Rating and Review -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.6"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_star"
                        android:contentDescription="Star" />

                    <TextView
                        android:id="@+id/txtReviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="34 Reviews"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Price Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtCurrentPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹232"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/txtPerPcs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Per Pcs"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:id="@+id/txtOriginalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹464"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:id="@+id/txtDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(-50%)"
                        android:textSize="14sp"
                        android:textColor="#FF5722"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bọc phần chọn Color -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerColors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:scrollbars="none" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Bọc phần chọn Size -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Size"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:scrollbars="none" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Card chứa Quantity, Total và 2 nút -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Quantity + Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="1">

                        <!-- Quantity -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quantity"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageButton
                                    android:id="@+id/btnDecrease"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_minus"
                                    android:background="@drawable/bg_circle_gray"
                                    android:contentDescription="Decrease" />

                                <TextView
                                    android:id="@+id/txtQuantity"
                                    android:layout_width="36dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textSize="16sp"
                                    android:textColor="#000000" />

                                <ImageButton
                                    android:id="@+id/btnIncrease"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_plus"
                                    android:background="@drawable/bg_circle_gray"
                                    android:contentDescription="Increase" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Total Amount -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Amount"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtTotalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹233"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">

                        <Button
                            android:id="@+id/btnEnquiry"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:text="Enquiry"
                            android:backgroundTint="@color/light_gray"
                            android:textColor="#000000"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btnAddToCart"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="48dp"
                            android:text="Add to Cart"
                            android:backgroundTint="#D99632"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card chứa Description -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="It's a jewellery set fit for the queens! Exude the royal vibe with this stone studded jewellery set. Consisting of a necklace, matching earrings, this..."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:maxLines="3"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/txtReadMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read more"
                        android:textColor="#D99632"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating and Reviews"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <!-- PHẦN 1: Tổng số sao -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/txtAverageRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.65"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#000000" />

                            <RatingBar
                                android:id="@+id/ratingStars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="4.65"
                                android:stepSize="0.1"
                                android:isIndicator="true"
                                android:layout_marginTop="4dp"
                                style="@style/Widget.AppCompat.RatingBar.Indicator" />

                            <TextView
                                android:id="@+id/txtTotalReviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="31 Reviews"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- PHẦN 2: Thanh thống kê các sao -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="24dp"
                            android:orientation="vertical">

                            <!-- Dòng sao + ProgressBar -->
                            <!-- Mỗi dòng có: sao - progress - số lượt -->

                            <!-- 5 sao -->
                            <include layout="@layout/item_star_progress"
                                android:id="@+id/starRow5" />
                            <!-- 4 sao -->
                            <include layout="@layout/item_star_progress"
                                android:id="@+id/starRow4" />
                            <!-- 3 sao -->
                            <include layout="@layout/item_star_progress"
                                android:id="@+id/starRow3" />
                            <!-- 2 sao -->
                            <include layout="@layout/item_star_progress"
                                android:id="@+id/starRow2" />
                            <!-- 1 sao -->
                            <include layout="@layout/item_star_progress"
                                android:id="@+id/starRow1" />
                            <!-- 0 sao -->
                            <include layout="@layout/item_star_progress"
                                android:id="@+id/starRow0" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PHẦN 3: Danh sách các đánh giá -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Reviews"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <!-- RecyclerView hiển thị từng đánh giá -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:overScrollMode="never" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- View All Reviews -->
            <!-- RecyclerView for displaying individual reviews -->

            <!-- View All Reviews -->
            <!-- View all reviews Text -->
            <TextView
                android:id="@+id/txtViewAllReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all reviews >"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <!-- Write Review Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reviewCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#F5F3FF"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Write your review"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:textSize="15sp" />

                    <RatingBar
                        android:id="@+id/ratingBarReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:layout_marginTop="8dp" />

                    <!-- EditText: Tiêu đề đánh giá -->
                    <EditText
                        android:id="@+id/edtReviewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Title of your review"
                        android:background="@drawable/bg_edittext"
                        android:padding="12dp"
                        android:inputType="textCapSentences"
                        android:maxLines="2"
                        android:minLines="1" />

                    <!-- RecyclerView hiển thị ảnh -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSelectedImages"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        android:orientation="horizontal" />

                    <!-- Ô nhập nội dung và nút chọn ảnh -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <EditText
                            android:id="@+id/edtReviewContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Write your review here..."
                            android:background="@drawable/bg_edittext"
                            android:padding="12dp"
                            android:gravity="top|start"
                            android:maxLines="5"
                            android:minLines="2"
                            android:inputType="textMultiLine" />

                        <ImageButton
                            android:id="@+id/btnSelectImages"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_circle_white"
                            android:src="@drawable/ic_plus"
                            android:scaleType="center"
                            android:contentDescription="Add image" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSubmitReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit review"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#6200EE"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_button_purple_rounded" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>






            <!-- Remaining content giữ nguyên ở đây (tên, giá, color, size, mô tả, đánh giá...) -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
