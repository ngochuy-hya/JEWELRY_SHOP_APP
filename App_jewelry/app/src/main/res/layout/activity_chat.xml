<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_white"
            android:clickable="true"
            android:contentDescription="Back"
            android:focusable="true"
            android:padding="6dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="DATJ"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Danh sách tin nhắn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_message_left" />

    <!-- Nhập và gửi tin nhắn -->
    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="8dp"
        android:elevation="8dp">

        <!-- Dòng preview ảnh -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSelectedImages"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            tools:listitem="@layout/item_image_preview" />

        <!-- Dòng nhập và nút gửi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnImage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/ic_plus"
                android:contentDescription="Chọn ảnh" />

            <EditText
                android:id="@+id/edtMessage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:maxLines="5"
                android:background="@drawable/bg_input"
                android:hint="Nhập tin nhắn..."
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:layout_marginHorizontal="8dp"
                android:gravity="top|start" />

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/ic_send"
                android:contentDescription="Gửi tin nhắn" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
