<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white">

    <!-- Ảnh sản phẩm -->
    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_round_image" />

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Tên và mã -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvSku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKU: 12345"
            android:textSize="13sp"
            android:textColor="#888888" />

        <!-- Giá & Giảm -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹100"
                android:textStyle="bold"
                android:textColor="#B47D2D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ₹150"
                android:textSize="13sp"
                android:textColor="#999999"
                android:layout_marginStart="6dp" />

            <TextView
                android:id="@+id/tvPercentOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (33%)"
                android:textSize="13sp"
                android:textColor="#FF5722"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Deal đặc biệt -->
        <TextView
            android:id="@+id/tvSpecialDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Deal Discount: ₹20"
            android:textSize="13sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="2dp" />

        <!-- Số lượng & Tổng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty: 2"
                android:textSize="13sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvTotalItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹200"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
