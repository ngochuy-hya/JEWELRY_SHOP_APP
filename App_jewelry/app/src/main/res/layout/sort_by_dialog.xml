<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSortBy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_sort_by_dialog"
    android:orientation="vertical"
    android:padding="20dp"
    android:clipToOutline="true">

    <!-- Tiêu đề + nút đóng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvSortByTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sort By"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="12dp" />

    <!-- Các lựa chọn -->
    <LinearLayout
        android:id="@+id/itemLatest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Latest"
            android:textSize="16sp"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioLatest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/radio_button_tint"
            android:focusable="false"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemLowHigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price: Low to High"
            android:textSize="16sp"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioLowHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/radio_button_tint"
            android:focusable="false"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemHighLow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price: High to Low"
            android:textSize="16sp"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioHighLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/radio_button_tint"
            android:focusable="false"
            android:clickable="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discount"
            android:textSize="16sp"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/radio_button_tint"
            android:focusable="false"
            android:clickable="false" />
    </LinearLayout>

</LinearLayout>
