<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_box_rounded"
    android:padding="12dp"
    android:layout_marginBottom="16dp">

    <!-- Dòng chứa icon, thông tin và nút chọn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Icon -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"
            android:layout_marginEnd="8dp" />

        <!-- Thông tin người nhận -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người nhận"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+84 xxxx"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFullAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ chi tiết"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Nút chọn -->
        <RadioButton
            android:id="@+id/radioSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#B47D2D" />
    </LinearLayout>
</LinearLayout>
