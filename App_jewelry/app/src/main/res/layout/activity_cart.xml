<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:padding="16dp"
    android:fitsSystemWindows="true">>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_arrow_left"
                android:background="@drawable/bg_circle_white"
                android:contentDescription="Back"
                android:padding="6dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Shopping Cart"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tvCartPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/4"
                android:textColor="#B47D2D"
                android:textSize="14sp"
                android:layout_marginEnd="14dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0" />

        <!-- Products -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_box_rounded"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Products"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCartItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <!-- Coupons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_box_rounded"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupons"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have any coupon?"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtCheckVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Check"
                    android:textColor="#B47D2D"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/edtVoucherCode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Enter coupon code"
                    android:padding="8dp"
                    android:background="@drawable/bg_edittext" />
                <Button
                    android:id="@+id/btnApplyVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#B47D2D"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvAppliedVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applied: SAVE50 - ₫50,000"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginTop="6dp" />

            <!-- Lỗi khi nhập mã -->
            <TextView
                android:id="@+id/tvVoucherError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invalid voucher code"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Order Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_box_rounded"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTotalMRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total MRP: ₹1468" />

            <TextView
                android:id="@+id/tvOfferDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offer Discount: -₹231"
                android:textColor="#4CAF50" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#E0E0E0" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: ₹470"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Checkout Button -->
        <Button
            android:id="@+id/btnProceedToCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed to Checkout"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#B47D2D"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>
</ScrollView>
