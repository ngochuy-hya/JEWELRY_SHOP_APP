<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme kế thừa Material3 -->
    <style name="Base.Theme.App_jewelry" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Màu vàng khi chọn, màu xám khi bình thường -->
        <item name="colorControlActivated">#CDA349</item>
        <item name="colorControlNormal">#AAAAAA</item>
        <item name="badgeStyle">@style/CustomBadgeText</item>
    </style>

    <!-- Theme giao diện chính -->
    <style name="Theme.App_jewelry" parent="Base.Theme.App_jewelry">
        <!-- nếu có thêm item chung cho app, có thể thêm ở đây -->
    </style>
    <style name="MySliderTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="sliderStyle">@style/Widget.MaterialComponents.Slider</item>
    </style>
    <!-- Style dành riêng cho RadioButton (Sort by) -->
    <style name="SortOptionRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">#CDA349</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <style name="FilterChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">@drawable/bg_chip_default</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>


    <!-- Style tùy chỉnh chọn BottomNav Indicator nếu bạn dùng -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:background">@color/white</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded</item>
    </style>
    <style name="CustomBadgeText" parent="Widget.MaterialComponents.Badge">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
